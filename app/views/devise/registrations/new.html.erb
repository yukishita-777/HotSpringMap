<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-signin text-center" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="mb-4">
    <h2>ユーザー登録</h2>
  </div>
  <div class="form-label-group mb-4">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", id: "inputEmail", placeholder: "メールアドレス" %>
    <%= f.label :email, for: "inputEmail", class: "sr-only"%>
  </div>
  <div class="form-label-group mb-4">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "inputPassword", placeholder: "パスワード"  %>
    <%= f.label :password, for: "inputPassword", class: "sr-only" %>
  </div>

  <div class="form-label-group mb-4">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "inputPasswordConfirmation", placeholder: "パスワード確認" %>
    <%= f.label :password_confirmation, for: "inputPasswordConfirmation", class: "sr-only" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class: "btn btn-lg btn-info btn-block" %>
  </div>
<% end %>
